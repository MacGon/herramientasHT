<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".almenu.view.ui.fragments.ALAsignatureAcceptedFragment">

    <androidx.appcompat.widget.AppCompatButton
            style="@style/btnComfirmTool"
            android:text="@string/aceptar"
            android:id="@+id/btnSuccefullAsignature"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"/>

    <androidx.cardview.widget.CardView
            android:layout_width="407dp"
            android:layout_height="198dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/cardView">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    style="@style/TitleAsignatureAcceptedStyle"
                    android:id="@+id/tvTitleLetterAsignature"
                    android:layout_width="325dp"
                    android:layout_height="71dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView style="@style/DescriptionAsignatureAcceptedStyle"
                      android:id="@+id/tvDescriptionAsignatureAccepted"
                      android:layout_width="325dp"
                      android:layout_height="86dp"
                      app:layout_constraintStart_toStartOf="@+id/tvTitleLetterAsignature"
                      app:layout_constraintEnd_toEndOf="@+id/tvTitleLetterAsignature"
                      app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="4dp"
                      app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
            android:id="@+id/vBackgroundAssignTool"
            android:layout_width="325dp"
            android:layout_height="355dp"
            android:background="@drawable/shape_button_assign_letter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginTop="16dp">
    </View>

    <com.baz.continuidadoperativaletterassignment.alutils.PaintView
            android:id="@+id/firmaView"
            android:layout_width="310dp"
            android:layout_height="342dp"
            app:layout_constraintTop_toTopOf="@+id/vBackgroundAssignTool"
            app:layout_constraintBottom_toBottomOf="@+id/vBackgroundAssignTool"
            app:layout_constraintEnd_toEndOf="@+id/vBackgroundAssignTool"
            app:layout_constraintStart_toStartOf="@+id/vBackgroundAssignTool"/>



    <androidx.appcompat.widget.AppCompatButton
            style="@style/btnDeletePaint"
            android:text="Borrar"
            android:id="@+id/btnDeleteImage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"/>
</androidx.constraintlayout.widget.ConstraintLayout>
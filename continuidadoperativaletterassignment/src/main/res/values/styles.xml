    <style name="TitleAssingLetterStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/Mango</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">3.2sp</item>
        <item name="android:text">@string/title_assignment</item>
    </style>

    <style name="TitleAsignatureAcceptedStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/Mango</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">3.2sp</item>
        <item name="android:text">@string/title_assignment</item>
    </style>

    <style name="TitleSuccessfullAcceptedStyle">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/Mango</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">@string/letter_successfull_description</item>
    </style>

    <style name="DescriptionAssingLetterStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>

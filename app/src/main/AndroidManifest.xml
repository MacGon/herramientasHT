<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dashboard_mh">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>


    <application
            android:name="com.simaht.SIMAHTApplication"
            android:allowBackup="true"
            android:hardwareAccelerated="true"
            android:icon="@mipmap/ic_launcher"
            android:usesCleartextTraffic="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.simaht.modules.test_camera.view.TestCamera">
        </activity>
        <!-- TODO: Activity del SPLASHSCREN -->
        <activity
                android:name="com.simaht.modules.dashboard_mh.SplashScreenActivity"
                android:label="@string/app_name"
                android:noHistory="true"
                android:theme="@style/SplashStyle">

        </activity>
        <activity android:name="com.simaht.modules.dashboard_mh.tools.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"></activity>
        <activity
                android:name="com.simaht.modules.login.view.LoginActivity"
                android:theme="@style/LoginStyle">
        </activity> <!-- TODO: Activity del MAINACTIVITY principal -->
        <activity
                android:name="com.simaht.modules.dashboard_mh.MainActivity"
                android:label="@string/app_name"
                android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity> <!-- Activity de NOTIFICACIONES -->
        <activity
                android:name="com.simaht.modules.dashboard_mh.Notifications"
                android:label="@string/msg_title_notificaciones">
        </activity> <!-- TODO: Activity del C4 AYUDA -->
        <activity
            android:name="com.simaht.modules.dashboard_mh.C4Help"
            android:label="@string/msg_title_c4_ayuda"
            android:theme="@style/AppThemeThreeActivity"></activity>
        <activity android:name="com.simaht.modules.camara.view.FunCamaraView" />
    </application>

</manifest>
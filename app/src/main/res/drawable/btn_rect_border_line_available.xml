<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="@color/available" />        <!-- border -->

            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"/>

            <stroke android:width="3dp" android:color="@color/available" />
            <!-- corner roundness -->
            <corners android:radius="20px" />
        </shape>
    </item>
</selector>


<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvAcuerdo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="@string/title_carta_asign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titulo_carta_asign"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <com.simaht.asignacion.cartaAsignacion.PaintView
                    android:id="@+id/firmaView"
                    android:layout_width="match_parent"
                    android:layout_height="319dp"
                    android:background="@drawable/shape_button_asign_carta"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/titulo_carta_asign"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>


            <TextView
                    android:text="@string/msg_carta_asign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/msg_carta_asgn"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/firmaView"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <Button
                    android:text="@string/msg_btn_aceptar"
                    android:layout_width="match_parent"
                    android:layout_height="86dp"
                    android:id="@+id/button"
                    android:background="@drawable/shape_button_asign_carta"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/msg_carta_asgn"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context="com.simaht.dashboard_mh.AssignTool.view.AssignToolChildFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/cvItemDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="true"
            android:background="@color/colorWhite"
            android:visibility="gone"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp"
            app:layout_constraintEnd_toEndOf="@id/rvContentAssignTool"
            app:layout_constraintStart_toStartOf="@id/rvContentAssignTool"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/rvContentAssignTool"
            android:layout_marginBottom="8dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBrandDetailAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Marca: PAX 2009"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvActivedOnAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvBrandDetailAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Acitivada: 10/03/2004"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvInsuranceNumberAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvActivedOnAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Seguro: 10/03/2004"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvSerialNumberAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvInsuranceNumberAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Serie: 10/03/2004"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPriceAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvSerialNumberAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Valor: $9,560.00"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStatusAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvPriceAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Estatus: Activa"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvBillDocAT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/colorAccent"
                        android:textStyle="italic"
                        android:maxLines="1"
                        android:textSize="@dimen/text_topic_size"
                        app:layout_constraintTop_toBottomOf="@id/tvStatusAT"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Factura: 21231"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvContentAssignTool"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/item_assign_tool_confirmation"/>

</androidx.constraintlayout.widget.ConstraintLayout>

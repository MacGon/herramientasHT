<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        tools:context=".LoginActivity">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivSimaht"
            android:layout_width="231dp"
            android:layout_height="52dp"
            android:src="@drawable/screen_name_app"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginStart="88dp"
            style="@style/TitleLoginStyle"
            app:layout_constraintTop_toBottomOf="@+id/ivSimaht"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSubTitleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="88dp"
            android:layout_marginTop="8dp"
            style="@style/SubTitleLoginStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleLogin" />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etUserLogin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_textedit_up_login"
            android:drawableStart="@drawable/ic_avatar"
            android:drawablePadding="16dp"
            android:layout_marginTop="20dp"
            android:inputType="textNoSuggestions"
            android:maxLength="5"
            style="@style/UserLoginStyle"
            app:layout_constraintStart_toStartOf="@+id/tvSubTitleLogin"
            app:layout_constraintEnd_toEndOf="@+id/tvSubTitleLogin"
            app:layout_constraintTop_toBottomOf="@+id/tvSubTitleLogin"
            app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_textedit_down_login"
            android:inputType="textPassword"
            android:ellipsize="start"
            android:drawableStart="@drawable/ic_locked"
            android:drawablePadding="16dp"
            android:maxLength="8"
            style="@style/UserPasswordStyle"
            app:layout_constraintEnd_toEndOf="@+id/etUserLogin"
            app:layout_constraintStart_toStartOf="@+id/etUserLogin"
            app:layout_constraintTop_toBottomOf="@+id/etUserLogin"
            app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAccederLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"
            android:layout_marginTop="68dp"
            style="@style/ButtonLoginStyle"
            app:layout_constraintStart_toStartOf="@+id/etPasswordLogin"
            app:layout_constraintEnd_toEndOf="@+id/etPasswordLogin"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordLogin"
            app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAyudaLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="32dp"
            style="@style/HelpLoginStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivIconAyudaLogin"
            app:layout_constraintHorizontal_bias="0.952"
            app:layout_constraintTop_toBottomOf="@+id/btnAccederLogin"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivIconAyudaLogin"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_lifesaver"
            android:layout_marginEnd="44dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAccederLogin"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordLogin"
            app:layout_constraintStart_toStartOf="@+id/btnAccederLogin"
            app:layout_constraintEnd_toEndOf="@+id/btnAccederLogin" app:layout_constraintHorizontal_bias="0.534"/>

</androidx.constraintlayout.widget.ConstraintLayout>
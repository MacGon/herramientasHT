<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AssignToolFragment">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivFotoPerfil"
            android:layout_width="132dp"
            android:layout_height="176dp"
            android:src="@drawable/ic_shuy"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            app:civ_border_color="@color/colorGray"
            app:civ_border_width="0.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmployeeNumber"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_textedit_person_tool"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            style="@style/EditTextEmpleadoStyle"
            app:layout_constraintTop_toBottomOf="@+id/ivFotoPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spAsignar"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_textedit_action_tool"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/etEmployeeNumber"
            app:layout_constraintEnd_toEndOf="@+id/etEmployeeNumber"
            app:layout_constraintTop_toBottomOf="@+id/etEmployeeNumber"
            app:layout_constraintHorizontal_bias="0.0">

    </androidx.appcompat.widget.AppCompatSpinner>


    <View
            android:id="@+id/vBackgroundAssignTool"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@drawable/shape_grid_background"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/spAsignar">
    </View>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fbAddTool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/fab_margin"
            android:tint="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/ic_sign_to_add"
            app:layout_anchorGravity="end|center"
            app:layout_constraintTop_toTopOf="@+id/vBackgroundAssignTool"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etTool"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:background="@drawable/shape_textedit_person_tool"
            android:layout_marginTop="28dp"
            style="@style/EditTextToolStyle"
            app:layout_constraintStart_toStartOf="@+id/spAsignar"
            app:layout_constraintEnd_toEndOf="@+id/spAsignar"
            app:layout_constraintTop_toTopOf="@+id/vBackgroundAssignTool"
            app:layout_constraintHorizontal_bias="0.0"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAssignTool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            style="@style/ButtonTooldStyle"
            android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="@id/vBackgroundAssignTool"
            app:layout_constraintEnd_toEndOf="@+id/etTool"
            app:layout_constraintStart_toStartOf="@+id/etTool"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clSearching"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:lineSpacingExtra="3.2sp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@color/colorWhite"
        android:text="@string/msg_scann_instruction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/transparentGray"
        app:layout_constraintBottom_toBottomOf="@id/tvInstructions" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/svEmployeeNumber"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textAlignment="textStart"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layoutDirection="ltr"
        android:hint="@string/msg_search_employee"
        android:maxLength="8"
        android:background="@drawable/shape_line"
        android:alwaysDrawnWithCache="true"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/colorAccent"
        android:inputType="number"
        android:digits="1234567890"
        android:ellipsize="start"
        android:windowSoftInputMode="stateAlwaysHidden"
        android:textCursorDrawable="@drawable/cursor_color"
        app:layout_constraintEnd_toEndOf="@id/tvInstructions"
        app:layout_constraintStart_toStartOf="@id/tvInstructions"
        app:layout_constraintTop_toBottomOf="@id/tvInstructions" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        style="@style/ButtonComfirmToolDisable"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_tool_function"
        android:enabled="false"
        android:fontFamily="@font/montserrat_regular"
        android:foreground="?android:attr/selectableItemBackground"
        android:shadowRadius="5.0"
        android:text="@string/msg_search"
        android:textAllCaps="false"
        android:textColor="@color/blocked"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_goneMarginStart="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>